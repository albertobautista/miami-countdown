---
import { orderedEvents } from "@/data/events";
---

<div class="relative">
  <div
    class="absolute top-4 left-1/2 transform -translate-x-1/2 p-6 rounded-lgl z-10"
  >
    <div class="flex justify-center gap-4">
      {
        orderedEvents.map((event) => (
          <a
            href={`/event/${event.id}`}
            class="text-lg font-semibold text-white hover:text-accent hover:underline transition-all duration-300 transform hover:scale-105"
          >
            {event.title}
          </a>
        ))
      }
    </div>
  </div>
</div>
