---
import { orderedEvents } from "@/data/events";
---

<div class="relative">
  <div
    class="absolute w-full top-4 left-1/2 transform -translate-x-1/2 p-6 rounded-lgl z-10"
  >
    <div class="flex justify-center gap-4">
      {
        orderedEvents.map((event, index) => (
          <a
            href={`/event/${event.id}`}
            class={`text-lg md:text-2xl font-semibold font-atomic ${event.colorClass}  hover:underline transition-all duration-300 transform hover:scale-105`}
          >
            {event.title}
            {index < orderedEvents.length - 1 ? "|" : ""}
          </a>
        ))
      }
    </div>
  </div>
</div>
